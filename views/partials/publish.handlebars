<section id="publish">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-heading">Try it out!</h2>
                <hr class="my-4">
                <form id="publish-form" method="post" action="/test" role="form">
                    <div class="controls">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="form_msgVpn">Message VPN *</label>
                                    <input id="form_msgVpn" type="text" name="msgVpn" class="form-control" placeholder="Message VPN *" required="required" data-error="Message VPN is required.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="form_username">Publisher Username *</label>
                                    <input id="form_username" type="text" name="username" class="form-control" placeholder="SEMP Username *" required="required"
                                        data-error="SEMP username is required.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="form_password">Publisher Password *</label>
                                    <input id="form_password" type="text" name="password" class="form-control" placeholder="Password *" required="required" data-error="SEMP password is required.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="form_app">Message</label>
                                    <textarea id="form_app" type="text" name="app" class="form-control" placeholder="Application *" required="required" data-error="Application name is required"></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <br>
                            <input id="PublishButton" type="submit" class="btn btn-primary btn-xl mx-auto" value="Publish Message">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>